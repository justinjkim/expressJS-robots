<!DOCTYPE html>
<head>
  <title>Profile - {{name}}</title>
  <link rel="stylesheet" type="text/css" href="/styles.css" />
</head>
<body>
  <div class="robot_main">
    <img src="{{avatar}}"  />
    <h1>{{name}}</h1>
    {{#address}}
    <h3>{{city}}, {{country}}</h3>
    {{/address}}

    {{^job}}<h3>Available for Hire</h3>{{/job}}
    {{#job}}<h3>{{job}} | {{company}}</h3>{{/job}}
    <h4>{{email}} | {{phone}}</h4>

    <div class="skills">
      <p>Skills</p>
      <ul>
        {{#skills}}
        <li>
          {{.}}
        </li>
        {{/skills}}
      </ul>
    </div>

  </div>

  <a href="/">Return to Main Page</a>
</body>
</html>
